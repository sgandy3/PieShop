@model IEnumerable<PieShop.Models.Pie>

@{
    ViewBag.Title = "Index";
}

<h2>Pies!</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Flavor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
           @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Flavor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            <img style="height:100px; width:100px;" src="~/@Html.DisplayFor(modelItem => item.Image)" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.PieID }) |
            @Html.ActionLink("Details", "Details", new { id=item.PieID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PieID })
        </td>
    </tr>
}

</table>
